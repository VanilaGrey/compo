<!DOCTYPE html>
<html lang="ru">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ projectName }}</title>
		<meta name="description" content="{{ description }}">
		<link rel="stylesheet" href="{{ rootPath }}styles/main.css{{ version }}">

		{% for weight in [400, 500, 700] %}
			<link rel="preload" href="fonts/gotham-{{ weight }}.woff2" as="font" crossorigin="anonymous">
		{% endfor %}
	</head>
	<body>
		<div class="page">
			{% block header %}
				<h1 class="visually-hidden">{{ projectName }}</h1>

				{% include 'cpmponents/page-header.twig' %}
			{% endblock %}

			<main>
				{% block main %}
					{% include 'cpmponents/product.twig' with product %}
				{% endblock %}
			</main>

			{% block footer %}
				{% include 'cpmponents/page-footer.twig' %}
			{% endblock %}
		</div>

		<script>
			window.appData = {{ appData|json_encode() }};
		</script>
		<script src="{{ rootPath }}scripts/main.js{{ version }}"></script>

		{% if isDev %}
			<script>
				window.pixelperfect = {{ pixelperfect }};
			</script>
			<script src="https://efiand.github.io/pixelperfect-tool/pixelperfect.min.js" defer></script>
		{% endif %}
	</body>
</html>
